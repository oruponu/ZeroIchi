<Window x:Class="ZeroIchi.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="using:ZeroIchi.Models"
        xmlns:vm="using:ZeroIchi.ViewModels"
        Title="{Binding Title}"
        d:DesignHeight="450"
        d:DesignWidth="800"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel Margin="8">
        <StackPanel Margin="0,0,0,8"
                    DockPanel.Dock="Top"
                    Orientation="Horizontal">
            <Button Command="{Binding OpenFileCommand}" Content="ファイルを開く"/>
        </StackPanel>

        <TextBlock Margin="0,0,0,8"
                   DockPanel.Dock="Top"
                   IsVisible="{Binding FileInfo, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                   Text="{Binding FileInfo}"/>

        <ListBox IsVisible="{Binding HexLines, Converter={x:Static ObjectConverters.IsNotNull}}"
                 ItemsSource="{Binding HexLines}"
                 SelectionMode="Toggle">
            <ListBox.Styles>
                <Style Selector="ListBoxItem">
                    <Setter Property="Padding" Value="4,0"/>
                    <Setter Property="MinHeight" Value="0"/>
                </Style>
                <Style Selector="ListBoxItem TextBlock">
                    <Setter Property="FontFamily" Value="Cascadia Mono, Consolas, Courier New, monospace"/>
                    <Setter Property="FontSize" Value="13"/>
                </Style>
            </ListBox.Styles>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:HexLine">
                    <Grid ColumnDefinitions="Auto,Auto,Auto">
                        <TextBlock Grid.Column="0"
                                   Margin="0,0,12,0"
                                   Foreground="Gray"
                                   Text="{Binding Offset}"/>
                        <TextBlock Grid.Column="1" Text="{Binding HexBytes}"/>
                        <TextBlock Grid.Column="2"
                                   Margin="12,0,0,0"
                                   Text="{Binding Ascii}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>

</Window>
