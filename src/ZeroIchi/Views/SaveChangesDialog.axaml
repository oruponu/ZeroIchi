<Window x:Class="ZeroIchi.Views.SaveChangesDialog"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZeroIchi"
        MinWidth="400"
        MaxWidth="500"
        Background="Transparent"
        CanResize="False"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <Style Selector="Button.accent /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentButtonForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
        </Style>
        <Style Selector="Button.accent:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentButtonForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorDark1}"/>
        </Style>
        <Style Selector="Button.accent:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark2}"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentButtonForeground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorDark2}"/>
        </Style>
        <Style Selector="Button.secondary /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#444444"/>
        </Style>
        <Style Selector="Button.secondary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="BorderBrush" Value="#4E4E4E"/>
        </Style>
        <Style Selector="Button.secondary:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
        </Style>
    </Window.Styles>

    <Border Margin="16"
            Background="#1E1E1E"
            BorderBrush="#404040"
            BorderThickness="1"
            BoxShadow="0 8 32 0 #60000000"
            ClipToBounds="True"
            CornerRadius="8">
        <DockPanel>
            <StackPanel Margin="24,20" DockPanel.Dock="Top">
                <TextBlock Margin="0,0,0,12"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Text="ZeroIchi"/>
                <TextBlock Text="変更内容を保存しますか？" TextWrapping="Wrap"/>
            </StackPanel>

            <Border Padding="24,16"
                    BorderBrush="#333333"
                    BorderThickness="0,1,0,0"
                    DockPanel.Dock="Bottom">
                <Grid ColumnDefinitions="*,8,*,8,*">
                    <Button x:Name="SaveButton"
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Classes="accent"
                            Content="保存する"
                            IsDefault="True"/>
                    <Button x:Name="DiscardButton"
                            Grid.Column="2"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Classes="secondary"
                            Content="保存しない"/>
                    <Button x:Name="CancelButton"
                            Grid.Column="4"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Classes="secondary"
                            Content="キャンセル"/>
                </Grid>
            </Border>
        </DockPanel>
    </Border>
</Window>
